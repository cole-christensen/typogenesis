# Typogenesis Snapfile
# Docs: https://docs.fastlane.tools/actions/capture_mac_screenshots/

# Project and scheme
project "./Typogenesis.xcodeproj"
scheme "Typogenesis"

# Output directory for screenshots
output_directory "./fastlane/screenshots"

# Clear previous screenshots before capturing new ones
clear_previous_screenshots true

# Skip the HTML summary (set to false to open in browser)
skip_open_summary false

# Languages to capture (for localization)
languages([
  "en-US"
])

# macOS doesn't have device types like iOS, but you can specify:
# - Different screen sizes by resizing the window in your tests
# - Different appearance modes (light/dark) in your tests

# Concurrent execution (faster but may cause issues)
concurrent_simulators false

# Stop on first error
stop_after_first_error false

# Test without building (if already built)
# test_without_building true

# Override status bar (iOS only, ignored for macOS)
# override_status_bar true

# Clean build before screenshots
clean true

# Namespace for organizing screenshots
# namespace "typogenesis"

# Additional xcodebuild arguments
# xcargs "-allowProvisioningUpdates"
